<!--pages/ZLLR/ZLLR.wxml-->
<i-toast id="toast" />

<i-spin fix custom wx:if="{{ !hiddenLoading }}">
	<i-icon type="refresh" size="20" i-class="icon-load"></i-icon>
	<view>加载中</view>
</i-spin>

<view class="page">
	<view class="top_img">
		<view class='u-wrp-bnr'>
			<image src='../../img/icon_24.png' class='u-img-slide' mode='aspectFill'></image>
		</view>
		<view class="introduce">
			<view class="Self">长期保洁</view>
			<view class="details">查看详情</view>
		</view>
	</view>

	<!-- 请选择服务时间 -->
	<view class="service" style="margin-top:20px;">请选择服务时间</view>
	<view class="weui-cell">
		<view class="weui-cell__bd weui-cell__ft_in-access">
			<picker mode="date" bindchange="timeChange" value="{{startTime}}" start="{{nowTime}}">
				<input class="weui-input" value='{{startTime}}' placeholder='' disabled='disabled' style="color:#999;" />
			</picker>
		</view>
	</view>

	<!-- 结束时间(自动) -->
	<view class="service" style="margin-top:20px;">服务结束时间</view>
	<view class="weui-cell">
		<view class="weui-cell__bd weui-cell__ft_in-access">
			<input class="weui-input" value='{{endTime}}' placeholder='' disabled='disabled' style="color:#999;" />
		</view>
	</view>

	<!-- 请选择服务时长 -->
	<view class="service" style="margin-top:20px;">请选择服务时长</view>
	<view class="weui-cell">
		<view class="weui-cell__bd weui-cell__ft_in-access">
			<picker bindchange="durationChange" value="{{durationIndex}}" range="{{durationOptions}}" range-key="dictLabel">
				<input class="weui-input" value='{{durationStr}}' placeholder='' disabled='disabled' style="color:#999;" />
			</picker>
		</view>
	</view>
	<!-- 请选择服务频率 -->
	<view class="service" style="margin-top:20px;">请选择服务频率</view>
	<view class="weui-cell">
		<view class="weui-cell__bd weui-cell__ft_in-access">
			<picker bindchange="frequencyChange" value="{{frequencyIndex}}" range="{{frequencyOptions}}" range-key="dictLabel">
				<input class="weui-input" value='{{frequencyStr}}' placeholder='' disabled='disabled' style="color:#999;" />
			</picker>
		</view>
	</view>
	<!-- 请填写服务地址 -->
	<view class="service">请填写服务地址</view>
	<view class="weui-cell">
		<view class="weui-cell__bd"
			style="padding: 10px;border: solid 1px #d7d7d7;background-color: #fff;border-radius: 4px;">
			<input class="weui-input" style="color:#999;" value="{{order.addr}}" bindinput="addrChange"></input>
		</view>
	</view>
	<!-- 选择护工 -->
	<view class="service">请选择护工</view>
	<view class="weui-cell">
		<view class="weui-cell__bd"
			style="padding: 10px;border: solid 1px #d7d7d7;background-color: #fff;border-radius: 4px;">
			<input class="weui-input" bindtap="goto" data-url="../HGLB/HGLB" style="color:#999;" value="{{nurse.name}}"
				disabled placeholder="点击选择护工"></input>
		</view>
	</view>

	<!-- list1 -->
	<view class="list">
		<view class="Escort">
			<view class="fee">
				<image src="../../img/icon_13.png"></image>
			</view>
			<view class="ph">总金额</view>
		</view>
		<view style="color: #fe7e01;font-weight: bold;">{{order.money}}</view>
	</view>
	<!--相关协议-->
	<checkbox-group bindchange="bindAgreeChange">
		<label class="weui-agree" for="weuiAgree">
			<view class="weui-agree__text">
				<checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{}}" />
				<view class="weui-agree__checkbox-icon">
					<icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
				</view>
				阅读并同意<navigator url="" class="weui-agree__link">《夕阳红用户协议》</navigator>
			</view>
		</label>
	</checkbox-group>
	<!--提交按钮-->
	<view class="weui-btn-area">
		<button class="weui-btn" type="primary" bindtap='submitOrder' disabled='{{btn_disabled}}'>确定提交</button>
	</view>
</view>