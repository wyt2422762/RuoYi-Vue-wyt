/* 页面底背景 */
page{
  background-color: #f3f6f8;
}
/* 总 */
.main{
  position: relative;
}
/* 底背景 */
.card1{
  position: absolute;
  background-color:#188afd;
  width: 100%;
  height: 230rpx;
  top: 100;
}
/* card2*/
.card2{
  position: absolute;
  /* background-color: white; */
  /* z-index: 999; */
  top: 140rpx;
  border-radius: 20rpx;
  /* display: flex;
  align-items: center; */
  padding: 40rpx;
  width: 100%;
  height: 250rpx;
  /* box-shadow: 0px 1px 10px 2.03px rgba(24, 138, 253, 0.09); */
}
/* 卡片1 */
.one{
  position: relative;
  justify-content: center;
  background-color: white;
  z-index: 999;
  top: -30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  /* margin: 0px 17px ; */
  width: 90%;
  height: 160rpx;
  box-shadow: 0px 1px 10px 2.03px rgba(24, 138, 253, 0.09);
}
.head{
  position: absolute;
  z-index: 9999;
  top: -100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.head_inner{
  width: 140rpx;
  height: 140rpx;
  overflow:hidden;  
  display: block;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.one image{
  width: 140rpx;
  height: 140rpx;
}
.name{
  position: absolute;
  font-size: 40rpx;
  font-weight: 650;
  letter-spacing: 6rpx;
  color: #188afd;
  top: 60rpx;
  z-index: 9999;
}
/* 卡片2 */
.two{
  position: relative;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap:wrap ;
margin-top: 30px;
}
/* 信息卡片 */
.two .vw{
  position: relative;
  width: 47%;
  display: block;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  background-color: white;
  top: -30rpx;
  border-radius: 20rpx;
  margin-bottom:30rpx;
  height: 200rpx;
  box-shadow: 0px 1px 10px 2.03px rgba(24, 138, 253, 0.09);
}
/* 分信息 */
.tu{
  text-align: center;
  margin-top: 30rpx;
}
.tu image{
  width: 87rpx;
  height: 87rpx;
}
.grxx{
  display: block;
  text-align: center;
  color: #4c4b4b;
  font-weight: 600;
  letter-spacing: 2rpx;
  font-size: 30rpx;
}